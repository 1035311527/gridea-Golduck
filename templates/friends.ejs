<html>

<head>
    <%- include('./includes/head', { siteTitle: themeConfig.siteName }) %>
    <%- include('./includes/cache') %>
</head>

<body>
    <div class="main">
        <%- include('./includes/header') %>

        <div id="main-content" class="post-container main-container">
            <div id="content" class="main-container-left">
                <% if (site.customConfig.friends) { %>
                    <% site.customConfig.friends.forEach(function(friend) { %>
                      <div class="friends_card">
                            <% if (friend.siteLogo) { %>
                                <a href="<%= friend.siteLink %>" target="_blank"><img class="friends_card-avatar" src="<%= friend.siteLogo %>"></a>
                            <% } else { %>
                                <a href="<%= friend.siteLink %>" target="_blank"><img class="friends_card-avatar" src="<%= site.customConfig.friendslogo %>"></a>
                            <% } %>  
                        <div class="friends_card-info">
                          <a href="<%= friend.siteLink %>" target="_blank"><%= friend.siteName %></a>
                          <br/>
                          <%= friend.description %>
                        </div>
                      </div>
                    <% }); %>
                  <% } %>
            </div>
            <!--  -->
            <div class="main-container-middle"></div>
            <!--  -->
            <div id="sidebar" class="main-container-right">

                <!-- 个人信息 -->
                <%- include('./includes/cards/id-card.ejs') %>

                <!-- 公告栏 -->
                <%- include('./includes/cards/notice-card.ejs') %>

            </div>

        </div>




    </div>
    <script>
        $('#sidebar').stickySidebar({
            topSpacing: 80,
            // bottomSpacing: 60
        });
    </script>
</body>

</html>